<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="是否将此走失信息发送给周围用户？"
        android:textColor="#000000"
        android:textSize="15dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/push_message_giveup"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_pic_comparison_bg_frame"
            android:text="放弃"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <Button
            android:id="@+id/push_message_submit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_pic_comparison_orange_bg_frame"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>


</RelativeLayout>